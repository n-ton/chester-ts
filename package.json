{
  "name": "chester-ts",
  "version": "1.0.0",
  "description": "WebDriver automation framework on typescript",
  "author": "Anton Ostrenko",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/concurrently": "^6.0.0",
    "@types/lodash": "^4.14.168",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.14.31",
    "@types/selenium-webdriver": "^4.0.9",
    "allure-commandline": "^2.13.0",
    "allure-mocha": "^2.0.0-beta.9",
    "axios": "^0.21.1",
    "chai": "^4.2.0",
    "chai-string": "^1.5.0",
    "concurrently": "^5.3.0",
    "fs": "^0.0.1-security",
    "lodash": "4.17.19",
    "log4js": "^6.4.0",
    "mocha": "^8.2.1",
    "mocha-typescript": "^1.1.17",
    "mochawesome": "^6.2.1",
    "selenium-webdriver": "^4.0.0-alpha.8",
    "typescript": "^3.9.5"
  },
  "scripts": {
    "lint": "./node_modules/.bin/eslint",
    "test:clean": "rm -rfv target",
    "test:compile": "tsc",
    "test:cc": "yarn test:clean && yarn test:compile",
    "test:runner-sql": "node target/src/runners/sequential-runner.js",
    "test:runner-prl": "node target/src/runners/parallel-runner.js",
    "test:sql": "yarn test:cc && yarn test:runner-sql --capsConfig iphone_5 --envConfig google --headless true --reporterConfig default --debugConfig default --logLevel debug",
    "test:prl": "yarn test:cc && yarn test:runner-prl --capsConfig iphone_5 --envConfig google --headless true --reporterConfig allure --debugConfig ci --retries 1 --logLevel debug",
    "allure:generate": "allure generate target/allure-results --clean -o target/allure-report",
    "allure:open": "yarn allure:generate && allure open ./test/target/allure-report"
  }
}
